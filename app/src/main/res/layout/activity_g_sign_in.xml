<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/frontcardvheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_gravity="center"
        app:cardElevation="2dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/frontcardvheaderinner"
            android:layout_marginBottom="-3dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="130dp"
            app:cardBackgroundColor="#3F51B5"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/fronttextmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="እባክዎትን መተግበሪያውን ለመጠቀም እዚህ ላይ ይመዝገቡ"/>

            <ProgressBar
                android:id="@+id/progressBarhome"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="ስለ ራስዎ የሚከተሉተን መረጃዎች ይሙሉ"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardv2t"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E53935"
                    android:focusable="true"
                    android:hint="ሙሉ ስም"
                    android:inputType="text"
                    android:nextFocusDown="@+id/nikname"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/addressmenoria"
                    android:layout_width="match_parent"
                    android:background="#E53935"
                    android:textSize="18dp"
                    android:nextFocusDown="@+id/guzotarik"
                    android:layout_gravity="bottom"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:hint="መኖሪያ አድራሻ"
                    android:focusable="true"
                    android:layout_height="40dp"/>
                <EditText
                    android:id="@+id/nikname"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/addressmenoria"
                    android:background="#E53935"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:hint="ቅፅል ስም"
                    android:focusable="true"
                    android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="ካሁን በፊት የጉዞ ታሪክ ከነበረዎት ዝርዝር መረጃ ይሙሉ"/>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardv5t"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                card_view:cardBackgroundColor="#FF9800"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">
                <EditText
                    android:id="@+id/guzotarik"
                    android:layout_width="match_parent"
                    android:background="#E53935"
                    android:textSize="18dp"
                    android:textColor="#FFF"
                    android:hint="እዚህ ይፃፉ"
                    android:focusable="true"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/frontcardv2trt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                card_view:cardBackgroundColor="#3F51B5"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">
                <Button
                    android:id="@+id/nosigninbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="መዝግብ"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:background="#1565C0"
                    android:textColor="#FFF"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="160dp"
                    tools:layout_editor_absoluteY="348dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>